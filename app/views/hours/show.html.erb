<div class="container" ng-controller="HoursCtrl">
    <h1>Working hours</h1>

    <div class="row">
      <div class="span6">
        <h2>Add hours</h2>

        <form class="form-inline" ng-submit="addHours()" >
          <div class="input-prepend">
            <span class="add-on">
              <i class="icon-calendar"></i>
            </span>

            <input type="date" id="date" class="input-small" value="{{date}}" ng-model="date" />
          </div>

          <br />
          <br />

          <div class="input-prepend">
            <span class="add-on">
              <i class="icon-time"></i>
            </span>

            <input type="time" id="start_time" class="input-small" value="{{start_time}}" ng-model="start_time" ng-change="plusMinus()" />
          </div>

          &ndash;

          <div class="input-prepend">
            <span class="add-on">
              <i class="icon-time"></i>
            </span>

            <input type="time" id="end_time" class="input-small" value="{{end_time}}" ng-model="end_time" ng-change="plusMinus()" />
          </div>

          <br />
          <br />

          <div class="input-prepend">
            <span class="add-on">&plusmn;</span>

            <input type="number" id="plusminus" class="input-small" value="{{plus_minus}}" ng-model="plus_minus" />
          </div>

          <br />
          <br />

          <input type="submit" id="save" class="btn btn-success btn-large" value="Save" />
        </form>
      </div>

      <div class="span6">
        <h2>History</h2>

        <ul id="history" class="unstyled">
          <li class="row">
            <h3 class="span2">Date</h3>

            <h3 class="span2">Time</h3>

            <h3 class="span2">&plusmn; Hours</h3>
          </li>


          <li class="row" ng-repeat="hour in hours">
            <span class="span2">{{hour.date}}</span>

            <span class="span2">{{hour.start_time}} &ndash; {{hour.end_time}}</span>

            <span class="span1">{{hour.plus_minus}}</span>

            <span class="span1">
              <button class="btn btn-danger btn-mini" ng-click="removeHours($index)">Remove</button>
            </span>
          </li>

          <li class="row">
            <span class="span2 offset4">Total {{totalHours()}}</span>
          </li>
        </ul>
      </div>
    </div>
  </div>